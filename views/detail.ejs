<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("commonhead") %>
    <link rel="stylesheet" href="/css/detail.css">
    <script type="text/javascript" src="https://www.google.com/books/jsapi.js"></script>
</head>
<body>
    <div id="loading">
        <img src="/images/Spinner_loading.svg" alt="" class="spinner">
    </div>
    <header>
        <div class="head-container">
            <h1>MIRRORMAN BOOKSTORE</h1>
            <div class="link-container">
                <a href="/" id="listback"><i class="fa-solid fa-magnifying-glass"></i>書籍検索へ</a>
                <a href="/cart" id="cartlist"><i class="fa-solid fa-table-list"></i>カート一覧へ</a>
                <!-- <a href="#" id="paypay"><img src="/images/paypay.jpg" alt="paypayのロゴ" id="paypaylogo"></a>
                <a href="#" id="creditcard"><i class="fa-solid fa-credit-card"></i>クレカで購入</a> -->
            </div>
        </div>
    </header>
    <section>
        <div class="maininfo">
            <img src="" alt="詳細画面用表示画像です" id="bookimg">
            <div class="book-container">
                <table id="bookinfo">
                    <tr>
                        <th>タイトル</th>
                        <td id="title"></td>
                    </tr>
                    <tr>
                        <th>出版社</th>
                        <td id="publisher"></td>
                    </tr>
                    <tr>
                        <th>著者</th>
                        <td id="author"></td>
                    </tr>
                    <tr>
                        <th>発売日</th>
                        <td id="date"></td>
                    </tr>
                    <tr>
                        <th>ページ数</th>
                        <td id="page"></td>
                    </tr>
                    <tr>
                        <th>値段</th>
                        <td id="price" name="price"></td>
                    </tr>
                </table>
                <button id="cart"><i class="fa-solid fa-cart-plus"></i>カートへ追加</button>
            </div>
        </div>
    </section>
    <section>
        <div class="desc-container">
            <h2 class="desctitle">書籍説明</h2>
            <p id="description">
            </p>
        </div>
    </section>
    <section>
        <div id="viewer"></div>
    </section>
        
    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="module" src="/js/detail.js"></script>
</body>
</html>